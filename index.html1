<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>MizuHub</title>
<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<style>
  *{margin:0;padding:0;box-sizing:border-box;font-family:'Orbitron',sans-serif;}
  body{
    background:#000;
    color:#fff;
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
    min-height:100vh;
    text-align:center;
    overflow:hidden;
  }

  canvas{
    position:fixed;
    top:0; left:0;
    width:100%; height:100%;
    z-index:-1;
  }

  h1{
    font-size:3em;
    color:white;
    text-shadow:0 0 10px #fff,0 0 20px #fff;
    margin-bottom:10px;
  }

  .icons{
    margin-bottom:20px;
    font-size:1.8em;
  }
  .icons a{
    color:white;
    margin:0 15px;
    transition:0.3s;
  }
  .icons a:hover{
    text-shadow:0 0 10px #fff,0 0 20px #fff;
    transform:scale(1.3);
  }

  .script-box{
    width:320px;
    max-width:90%;
    height:160px;
    background:rgba(255,255,255,0.05);
    color:#fff;
    border:1px solid #fff;
    border-radius:12px;
    padding:10px;
    text-align:left;
    overflow-y:auto;
    font-family:monospace;
    font-size:14px;
    white-space:pre-wrap;
    word-break:break-word;
    margin-top:20px;
    box-shadow:0 0 10px #fff;
  }

  .copy-btn{
    margin-top:15px;
    padding:12px 20px;
    border:none;
    border-radius:12px;
    font-size:1em;
    background:rgba(0,0,0,0.6);
    color:white;
    font-weight:bold;
    cursor:pointer;
    transition:0.3s;
    box-shadow:0 0 10px #fff,0 0 20px #fff inset;
  }
  .copy-btn:hover{
    background:rgba(255,255,255,0.1);
    transform:scale(1.05);
  }

  footer{
    font-size:0.9em;
    color:#aaa;
    text-shadow:0 0 5px #fff;
    margin-top:25px;
  }

  .notification{
    position:fixed;
    top:20px;
    left:50%;
    transform:translateX(-50%);
    background:white;
    color:#000;
    padding:12px 20px 16px;
    border-radius:12px;
    box-shadow:0 0 15px #fff;
    opacity:0;
    transition:0.4s;
    z-index:9999;
    width:260px;
    text-align:center;
  }
  .notification.show{opacity:1;}
  .progress-bar{
    width:100%;
    height:6px;
    background:rgba(0,0,0,0.2);
    border-radius:4px;
    margin-top:8px;
    overflow:hidden;
  }
  .progress{
    height:100%;
    width:0%;
    background:linear-gradient(90deg,#888,#222);
    transition:width 0.1s linear;
  }
</style>
</head>
<body>

<h1>MizuHub</h1>

<div class="icons">
  <a href="https://discord.gg/mxSvSpJe7s" target="_blank" title="Discord"><i class="fab fa-discord"></i></a>
  <a href="https://youtube.com/@mizuscripts" target="_blank" title="YouTube"><i class="fab fa-youtube"></i></a>
</div>

<div class="script-box" id="scriptBox">
loadstring(game:HttpGet("https://raw.githubusercontent.com/mizu-dump/MizuHub/refs/heads/main/loader.lua"))()
</div>
<button class="copy-btn" onclick="copyScript()">Copy Script</button>

<footer>Website By: @mizuscripts</footer>

<div class="notification" id="notification">
  <span id="notifText"></span>
  <div class="progress-bar"><div class="progress" id="progress"></div></div>
</div>

<canvas id="stars"></canvas>

<script>
  // Copy button + notification
  function copyScript() {
    const scriptText = document.getElementById('scriptBox').innerText;
    navigator.clipboard.writeText(scriptText).then(() => {
      showNotification("Script copied to clipboard!");
    });
  }

  const notification = document.getElementById('notification');
  const notifText = document.getElementById('notifText');
  const progress = document.getElementById('progress');
  let notifActive = false;

  function showNotification(text){
    if(notifActive) return;
    notifActive = true;
    notifText.textContent = text;
    notification.classList.add('show');
    progress.style.width = "0%";
    let width = 0;
    let interval = setInterval(()=>{
      width += 100 / (3000 / 50);
      progress.style.width = width + "%";
      if(width >= 100){
        clearInterval(interval);
        notification.classList.remove('show');
        notifActive = false;
      }
    }, 50);
  }

  // Starfield
  const canvas = document.getElementById('stars');
  const ctx = canvas.getContext('2d');
  let stars = [], w, h;

  function initCanvas(){
    w = canvas.width = window.innerWidth;
    h = canvas.height = window.innerHeight;
    stars = [];
    for(let i=0;i<200;i++){
      stars.push({x:Math.random()*w,y:Math.random()*h,r:Math.random()*1.5,d:Math.random()*1.5});
    }
  }

  function drawStars(){
    ctx.clearRect(0,0,w,h);
    ctx.fillStyle = "white";
    ctx.beginPath();
    for(let s of stars){
      ctx.moveTo(s.x,s.y);
      ctx.arc(s.x,s.y,s.r,0,Math.PI*2,true);
    }
    ctx.fill();
    moveStars();
  }

  let angle = 0;
  function moveStars(){
    angle += 0.01;
    for(let s of stars){
      s.x += Math.sin(angle+s.d)*0.5;
      s.y += Math.cos(angle+s.d)*0.5;
      if(s.x<0)s.x=w;
      if(s.x>w)s.x=0;
      if(s.y<0)s.y=h;
      if(s.y>h)s.y=0;
    }
  }

  function animate(){
    drawStars();
    requestAnimationFrame(animate);
  }

  window.addEventListener('resize',initCanvas);
  initCanvas();
  animate();
</script>
</body>
</html>
